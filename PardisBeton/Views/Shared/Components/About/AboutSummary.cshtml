@using Model.ViewModels.About

@model AboutViewModel

<div class="container">
    <div class="content-block ">
        <div class="row">
            <div class="col-12 col-lg-6 d-flex about-col  wow fadeInUp mt-4 mb-4" data-wow-delay="0.2s">
                <div class="img-area  ">
                    <div class="image  " data-tilt>
                        <img class="about-img img-fluid shadow" loading="lazy" src="~/@Model.SummaryImagePath" alt="معرفی پردیس بتن">
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-6 d-flex align-items-center about-col pad-start  wow fadeInUp " data-wow-delay="0.6s">
                <div class="text-area ">
                    <div class="sec-heading  light-title ">
                        <div class="content-area">
                            <span class=" pre-title       wow fadeInUp " data-wow-delay=".2s">درباره ما</span>
                            <h2 class=" title    wow fadeInUp" data-wow-delay=".4s">معرفی پردیس بتن</h2>
                        </div>
                    </div>

                    <div class="mt-3 mb-3">
                        @Html.Raw(Model.Summary)
                    </div>

                    <div class="cta-area "><a class=" btn-solid " href="/about">بیشتر بخوانید</a></div>
                </div>
            </div>
        </div>
    </div>
</div>