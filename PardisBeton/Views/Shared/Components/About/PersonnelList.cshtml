@using Model.ViewModels.About

@model AboutCollectionViewModel

@{
    var currentModel = Model.Personnels;
}

 <!-- Start our team Section-->
<section class="our-team mega-section " id="our-team">
    <div class="container">
        <div class="sec-heading  ">
            <div class="content-area">
                <span class=" pre-title       wow fadeInUp " data-wow-delay=".2s">تیم پردیس بتن</span>
                <h3 class="    wow fadeInUp" data-wow-delay=".4s">اعضای <span class='hollow-text'>متخصص</span> پردیس بتن</h3>
            </div>          
        </div>
        <div class="container-fluid">
            <div class="row">
                @foreach (var item in currentModel)
                {
                    <!-- Team Member -->
                <div class="col-12 col-md-6  col-lg-3 mt-3">
                    <div class="tm-member-card     wow   fadeInUp" data-wow-delay="0.1s">
                        <div class="tm-image js-tilt ">
                            <a class="tm-link  " href="/about/personnel/@item.PersonnelId/@item.Name @item.Family پردیس بتن">
                                <div class="overlay overlay-color"></div>
                                <img class="img-fluid parallax-img  " loading="lazy" src="~/@item.ImagePath" alt="@item.Name @item.Family - پردیس بتن" />
                            </a>
                            
                        </div>
                        <div class="tm-details">
                                <a class="tm-link" href="/about/personnel/@item.PersonnelId/@item.Name @item.Family پردیس بتن">
                                <h6 class="tm-name">
                                        @if(item.Nickname != null && item.Nickname != string.Empty)
                                        {
                                            <span>
                                                @item.Nickname
                                            </span>
                                            
                                        }
                                        else
                                        {
                                            <span>
                                                @item.Name @item.Family
                                            </span>                                            
                                        }

                                </h6>
                            </a><span class="tm-role">@item.Position </span>
                        </div>
                    </div>
                </div>
                }
                
            </div>
        </div>
    </div>
</section>
<!-- End our team Section-->