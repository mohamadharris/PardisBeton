@using Model.ViewModels.About

@model AboutViewModel




@{
    ViewData["Title"] = "ویرایش درباره ما";
}

@section Head {



}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">معرفی شرکت (خلاصه) </h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-left">
                    <li class="breadcrumb-item"><a href="/admin">خانه</a></li>
                    <li class="breadcrumb-item active">ویرایش معرفی شرکت</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card card-outline card-warning">
                    <div class="card-header">
                        <h3 class="card-title">
                            ویرایش اطلاعات معرفی شرکت صفحه خانه
                        </h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <form asp-area="admin" asp-controller="adminabout" asp-action="EditAbout" enctype="multipart/form-data">
                            <input asp-for="AboutId" type="hidden" />
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <label asp-for="ImageFile" class="control-label">تصویر</label>
                                    <input asp-for="ImageFile" type="file" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-12">
                                    <label asp-for="Summary" class="control-label">شرح مختصر</label>
                                    <textarea asp-for="Summary" class="form-control" id="description"></textarea>
                                    @Html.Partial("_BootstrapGridModal")
                                </div>
                            </div>



                            <div class="form-group">
                                <input type="submit" value="دخیره" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>



            </div>

            <div class="col-md-4">
                <div class="card card-outline card-warning">
                    <div class="card-header">
                        <h3 class="card-title">
                            تصویر جاری

                        </h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 p-3">
                                <img class="img-fluid" src="~/@Model.SummaryImagePath" alt="thumb" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }



    <script>

        $(document).ready(function () {
            // Initialize the Summernote editor with a specific ID and upload URL
            initializeSummernote('#description', '/admin/adminabout/uploadImage');
            // Setup modal handlers with the same ID
            setupGridModalHandlers('#description');

        });
    </script>
}
